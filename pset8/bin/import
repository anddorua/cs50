#!/usr/bin/env php
<?php
    require('../vendor/library50-php-5/CS50/CS50.php');
    CS50::init(__DIR__ . "/../config.json");
    // TODO
    if (count($argv) == 1) {
        echo "Usage: {$argv[0]} <file name>\n";
        die();
    }
    
    if (!file_exists($argv[1])) {
        echo "File {$argv[1]} do not exists\n";
        die();
    }
    
    if (!is_readable($argv[1])) {
        echo "File {$argv[1]} is not readable\n";
        die();
    }
    
    $row = 0;
    if (($handle = fopen($argv[1], "r")) !== FALSE) {
    while (($data = fgetcsv($handle, 1000, "\t")) !== FALSE) {
        $num = count($data);
        CS50::query("INSERT INTO `places`(`country_code`, `postal_code`, `place_name`, " 
            . "`admin_name1`, `admin_code1`, `admin_name2`, `admin_code2`, `admin_name3`, `admin_code3`, `latitude`, `longitude`, `accuracy`)" 
            . " VALUES (?,?,?,?,?,?,?,?,?,?,?,?)"
            , $data[0]
            , $data[1]
            , $data[2]
            , $data[3]
            , $data[4]
            , $data[5]
            , $data[6]
            , $data[7]
            , $data[8]
            , $data[9]
            , $data[10]
            , $data[11]
        );
        $row++;
    }
    fclose($handle);
    echo "Finished $row rows.";
}
?>